<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo de cielo pixelado -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/sky_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panel principal del producto -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mystery_box_panel"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COFRE MISTERIOSO"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="14sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="20dp" />

        <!-- Contenedor del ícono misterioso -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/ivIconoProducto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mystery_box"
                android:background="@drawable/item_frame_gold"
                android:padding="16dp"
                android:contentDescription="Producto misterioso" />

            <!-- Efecto de brillo -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="-5dp"
                android:src="@drawable/ic_sparkle" />

        </FrameLayout>

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/info_panel_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mystery_text"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCategoriaProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPO: ???"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="8sp"
                android:textColor="#AAFFFFFF"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPrecioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRECIO: ???"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="8sp"
                android:textColor="#FFD700"
                android:gravity="center" />

        </LinearLayout>

        <!-- Botón de compra -->
        <Button
            android:id="@+id/btnComprarAleatorio"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ABRIR COFRE"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/pixel_button_gold" />

        <!-- Texto de advertencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Te atreves?"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#AAFFFFFF"
            android:gravity="center"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <!-- Botón Volver - Posicionado en la esquina inferior izquierda -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="VOLVER"
        android:fontFamily="@font/press_start_2p_family"
        android:textSize="10sp"
        android:textColor="#000000"
        android:background="@drawable/pixel_button_gold"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>