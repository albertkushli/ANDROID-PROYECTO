<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartidaActivity">

    <!-- Imagen de fondo de tierra/suelo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/f5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay muy sutil para mejorar contraste -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panel de stats del jugador -->
    <LinearLayout
        android:id="@+id/playerStatsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/stats_panel_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nombre del jugador -->
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HEROE: Usuario"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="14sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="12dp" />

        <!-- Stats en filas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Vidas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart_pixel" />

                <TextView
                    android:id="@+id/tvVidas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="12sp"
                    android:textColor="#FF6B6B"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Monedas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coin_pixel" />

                <TextView
                    android:id="@+id/tvMonedas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="12sp"
                    android:textColor="#FFD700"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Puntuación -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_pixel" />

                <TextView
                    android:id="@+id/tvPuntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="12sp"
                    android:textColor="#4ECDC4"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Botón Tienda -->
    <LinearLayout
        android:id="@+id/btnTienda"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/action_button_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/f3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIENDA"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFD700"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Botón Inventario -->
    <LinearLayout
        android:id="@+id/btnInventario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/action_button_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnTienda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/f4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/press_start_2p_family"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="INVENTARIO"
            android:textColor="#FFD700"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="VOLVER"
        android:fontFamily="@font/press_start_2p_family"
        android:textSize="10sp"
        android:textColor="#000000"
        android:background="@drawable/pixel_button_gold"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Botón FAQ -->
    <LinearLayout
        android:id="@+id/btnFaq"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/faq_button_background"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/btnVolver"
        app:layout_constraintBottom_toBottomOf="@id/btnVolver"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="18sp"
            android:textColor="#FFD700"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>