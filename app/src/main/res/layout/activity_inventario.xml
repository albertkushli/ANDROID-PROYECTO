<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo del campamento -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/f8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay oscuro muy sutil -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panel superior con título -->
    <LinearLayout
        android:id="@+id/headerPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inventory_header_background"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TU MOCHILA"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="16sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESPACIO: "
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="8sp"
                android:textColor="#AAFFFFFF" />

            <TextView
                android:id="@+id/tvInventorySpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/20"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="8sp"
                android:textColor="#FFD700" />

        </LinearLayout>

    </LinearLayout>

    <!-- Panel contenedor para el inventario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/inventory_panel_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerPanel"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- RecyclerView para los items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInventario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

        <!-- Mensaje cuando no hay items -->
        <TextView
            android:id="@+id/tvEmptyInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOCHILA VACIA"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#AAFFFFFF"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Panel inferior -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_panel_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="VOLVER"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#000000"
            android:background="@drawable/pixel_button_gold"
            android:paddingHorizontal="20dp" />

        <!-- Espaciador -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Información del peso/valor total -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALOR TOTAL"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="8sp"
                android:textColor="#AAFFFFFF" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_coin_pixel"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvTotalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="10sp"
                    android:textColor="#FFD700" />

            </LinearLayout>

        </LinearLayout>

        <!-- FAB de menú -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOpenMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_menu_24"
            app:backgroundTint="#FFD700"
            app:tint="#000000"
            android:contentDescription="Abrir menú" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>