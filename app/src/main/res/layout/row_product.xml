<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/product_item_background"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Marco para la imagen del producto -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_image_frame"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del producto" />

        <!-- Efecto de brillo para items especiales (opcional) -->
        <ImageView
            android:id="@+id/itemRarity"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_margin="-4dp"
            android:src="@drawable/ic_star_pixel"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Información del producto -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFD700"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_coin_pixel"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="8sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botón de compra estilo RPG -->
    <Button
        android:id="@+id/btnBuy"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="COMPRAR"
        android:fontFamily="@font/press_start_2p_family"
        android:textSize="8sp"
        android:textColor="#000000"
        android:background="@drawable/buy_button_background" />

</LinearLayout>