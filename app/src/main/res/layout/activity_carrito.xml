<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo del carrito de comerciante -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/f9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay muy sutil -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panel superior con título -->
    <LinearLayout
        android:id="@+id/headerPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_header_background"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TU CARRITO"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="16sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de compras"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#AAFFFFFF"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Panel para el SwipeRefresh y RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerPanel"
        app:layout_constraintBottom_toTopOf="@id/summaryPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cart_list_background"
            android:padding="8dp"
            android:clipToPadding="false" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Panel de resumen -->
    <LinearLayout
        android:id="@+id/summaryPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cart_summary_background"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOTAL:"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="12sp"
                android:textColor="#FFD700" />

        </LinearLayout>

        <!-- Monedas disponibles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TUS MONEDAS:"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="10sp"
                android:textColor="#AAFFFFFF" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_coin_pixel"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="10sp"
                android:textColor="#FFD700" />

        </LinearLayout>

    </LinearLayout>

    <!-- Panel inferior con botones -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_panel_background"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="VOLVER"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="9sp"
            android:textColor="#000000"
            android:background="@drawable/pixel_button_gold"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Botón Vaciar -->
        <Button
            android:id="@+id/btnEmptyCart"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="VACIAR"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="9sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/pixel_button_red"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Botón Comprar -->
        <Button
            android:id="@+id/btnComprar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="COMPRAR"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="9sp"
            android:textColor="#000000"
            android:background="@drawable/pixel_button_green"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp" />

        <!-- FAB de menú -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOpenMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_menu_24"
            app:backgroundTint="#FFD700"
            app:tint="#000000"
            android:contentDescription="Abrir menú" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>