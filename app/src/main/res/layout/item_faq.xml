<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/faq_item_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pregunta con icono -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_question_pixel"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¿Pregunta?"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFD700"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Respuesta -->
    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respuesta"
        android:fontFamily="@font/press_start_2p_family"
        android:textSize="8sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginStart="28dp"
        android:lineSpacingExtra="3dp" />

    <!-- Sender y fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="28dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_scroll_pixel"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvSenderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin · 2024-05-27"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="6sp"
            android:textColor="#66FFFFFF" />

    </LinearLayout>

</LinearLayout>