<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/section_item_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Icono de la sección -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp">

        <!-- Fondo del icono -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/section_icon_background"
            android:padding="12dp"
            android:src="@drawable/ic_door_pixel"
            android:id="@+id/ivSectionIcon" />

        <!-- Efecto de brillo -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:layout_margin="-4dp"
            android:src="@drawable/ic_sparkle"
            android:alpha="0.7" />

    </FrameLayout>

    <!-- Información de la sección -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre de la sección -->
        <TextView
            android:id="@+id/tvSectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECCION"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="12sp"
            android:textColor="#FFD700"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="4dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvSectionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entra y descubre"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#AAFFFFFF" />

    </LinearLayout>

    <!-- Flecha indicadora -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right_pixel"
        android:layout_marginStart="8dp" />

</LinearLayout>
