<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <!-- Imagen de fondo del bosque -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/f1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay oscuro para mejorar legibilidad -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panel de registro estilo RPG -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rpg_panel_background"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR HEROE"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="16sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="32dp" />

        <!-- Campo de usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/pixel_input_field"
            android:paddingHorizontal="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:hint="Elige tu nombre"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:layout_marginBottom="20dp"
            android:inputType="textPersonName" />

        <!-- Campo de contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/pixel_input_field"
            android:paddingHorizontal="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:hint="Crea contraseña"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:layout_marginBottom="20dp"
            android:inputType="textPassword" />

        <!-- Campo confirmar contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/pixel_input_field"
            android:paddingHorizontal="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:hint="Repite contraseña"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:layout_marginBottom="12dp"
            android:inputType="textPassword" />

        <!-- Checkbox mostrar contraseña -->
        <CheckBox
            android:id="@+id/checkboxMostrarPasswordRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver contraseña"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFD700"
            android:layout_marginBottom="24dp" />

        <!-- Botón de registro -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CREAR PERSONAJE"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/pixel_button_gold"
            android:layout_marginBottom="20dp" />

        <!-- Link de login -->
        <TextView
            android:id="@+id/btnGoToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿YA TIENES CUENTA? INICIA SESIÓN"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>