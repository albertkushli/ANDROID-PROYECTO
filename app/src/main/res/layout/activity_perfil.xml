<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo oscuro -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF1A0F05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView para todo el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Panel del perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/profile_main_panel"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PERFIL DE HEROE"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="14sp"
                    android:textColor="#FFD700"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:layout_marginBottom="24dp" />

                <!-- Avatar clickeable -->
                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp">

                    <!-- Marco del avatar -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/avatar_frame_background"
                        android:padding="4dp" />

                    <!-- Avatar actual -->
                    <ImageView
                        android:id="@+id/ivUserAvatar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/a1"
                        android:scaleType="centerCrop" />

                    <!-- Indicador de cambio -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@drawable/change_avatar_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_edit_pixel" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CAMBIAR"
                            android:fontFamily="@font/press_start_2p_family"
                            android:textSize="6sp"
                            android:textColor="#000000"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Nombre de usuario -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USERNAME"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />

            </LinearLayout>

            <!-- Panel de insignias -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/badges_panel_background"
                android:padding="20dp">

                <!-- Título de insignias -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INSIGNIAS"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="12sp"
                    android:textColor="#FFD700"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:layout_marginBottom="16dp" />

                <!-- Grid de insignias -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBadges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Mensaje cuando no hay insignias -->
                <TextView
                    android:id="@+id/tvNoBadges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AUN NO HAS GANADO INSIGNIAS"
                    android:fontFamily="@font/press_start_2p_family"
                    android:textSize="8sp"
                    android:textColor="#66FFFFFF"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Botón de volver -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="VOLVER"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@drawable/pixel_button_gold"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>