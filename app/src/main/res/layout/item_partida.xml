<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/item_partida_background"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Icono de espada/aventura -->
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_sword_pixel"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp" />

    <!-- Información de la partida -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvPartidaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFD700"
            android:text="PARTIDA #1"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#AAFFFFFF"
            android:text="Toca para continuar"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Botón eliminar estilo pixel -->
    <Button
        android:id="@+id/btnEliminarPartida"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pixel_button_red"
        android:text="X"
        android:fontFamily="@font/press_start_2p_family"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical" />

</LinearLayout>