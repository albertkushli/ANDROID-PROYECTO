<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/video_item_background"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Icono de pergamino/scroll -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/question_icon_background"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="?"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="20sp"
            android:textColor="#FFD700"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

    </FrameLayout>

    <!-- Texto de la pregunta -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVideoUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cómo empiezo mi aventura?"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFD700"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca para ver respuesta"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="6sp"
            android:textColor="#AAFFFFFF"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Flecha indicadora -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_play_pixel"
        android:layout_marginStart="8dp" />

</LinearLayout>