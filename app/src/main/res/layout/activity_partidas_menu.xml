<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartidasMenuActivity">

    <!-- Imagen de fondo del bosque (vista trasera) -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/f2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay oscuro -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panel principal estilo RPG -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con título y botón perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Título -->

            <!-- Botón Perfil -->

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/press_start_2p_family"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:text="TUS AVENTURAS"
                android:textColor="#FFD700"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btnPerfil"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/pixel_button_gold"
                android:src="@drawable/ic_person_pixel"
                android:padding="12dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- Botón Consultas -->
        <Button
            android:id="@+id/btnConsultas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CONSULTAS"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/pixel_button_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Botón Crear Partida -->
        <Button
            android:id="@+id/btnCrearPartida"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="NUEVA AVENTURA"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/pixel_button_gold"
            android:layout_marginBottom="20dp" />

        <!-- Panel de partidas con fondo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rpg_panel_background"
            android:padding="16dp">

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PARTIDAS GUARDADAS"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView de partidas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPartidas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

            <!-- Texto cuando no hay partidas -->
            <TextView
                android:id="@+id/tvNoPartidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO HAY PARTIDAS"
                android:fontFamily="@font/press_start_2p_family"
                android:textSize="10sp"
                android:textColor="#AAFFFFFF"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Bar centrado -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:progressTint="#FFD700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB de menú con estilo -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpenMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_menu_24"
        app:backgroundTint="#FFD700"
        app:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>