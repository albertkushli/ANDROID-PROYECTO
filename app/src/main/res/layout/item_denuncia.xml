<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/denuncia_item_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título con icono de alerta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_alert_pixel"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Título de la denuncia"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="12sp"
            android:textColor="#FF6B6B"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje de la denuncia"
        android:fontFamily="@font/press_start_2p_family"
        android:textSize="10sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginStart="28dp"
        android:lineSpacingExtra="3dp" />

    <!-- Remitente y fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="28dp">

        <TextView
            android:id="@+id/tvRemitente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Por: Usuario"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#FFD700" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2024"
            android:fontFamily="@font/press_start_2p_family"
            android:textSize="8sp"
            android:textColor="#66FFFFFF" />

    </LinearLayout>

</LinearLayout>